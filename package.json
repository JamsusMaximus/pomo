{
  "name": "pomo",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.15.3",
  "scripts": {
    "// ============================================": "",
    "// Development": "",
    "// ============================================": " ",
    "predev": "bash scripts/dev/validate-environment.sh && node scripts/dev/check-env.js",
    "dev": "concurrently \"npm run dev:next\" \"npm run dev:convex\" --names \"next,convex\" --prefix-colors \"cyan,magenta\" --kill-others-on-fail --restart-tries 3",
    "dev:clean": "bash scripts/dev/clean-dev.sh && npm run dev",
    "dev:next": "next dev",
    "dev:convex": "convex dev",
    "verify-setup": "node scripts/dev/verify-setup.js",
    "postinstall": "node scripts/dev/verify-setup.js || true",
    "// ============================================": "  ",
    "// Build & Production": "",
    "// ============================================": "   ",
    "prebuild": "SKIP_PORT_CLEANUP=1 bash scripts/dev/validate-environment.sh && node scripts/ci/prebuild.js",
    "build": "next build",
    "start": "next start",
    "// ============================================": "    ",
    "// Code Quality": "",
    "// ============================================": "     ",
    "lint": "eslint .",
    "lint:strict": "eslint . --max-warnings=0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "// ============================================": "      ",
    "// Testing": "",
    "// ============================================": "       ",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:pages": "node scripts/ci/test-pages.mjs",
    "test:pages:prod": "node scripts/ci/test-pages.mjs --prod",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "// ============================================": "        ",
    "// CI/CD": "",
    "// ============================================": "         ",
    "monitor-pr": "node scripts/ci/monitor-pr-build.js",
    "// ============================================": "          ",
    "// Maintenance": "",
    "// ============================================": "           ",
    "generate:changelog": "node scripts/maintenance/generate-changelog.mjs",
    "// ============================================": "            ",
    "// Desktop App (Tauri)": "",
    "// ============================================": "             ",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.33.2",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@vercel/analytics": "^1.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "convex": "^1.27.3",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.22",
    "lucide-react": "^0.544.0",
    "next": "15.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4.1.14",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/web-push": "^3.6.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "glob": "^11.0.3",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.14",
    "tsx": "^4.20.6",
    "turbo": "^2.5.8",
    "typescript": "^5",
    "vitest": "^1.6.0",
    "web-push": "^3.6.7"
  },
  "optionalDependencies": {
    "@anthropic-ai/sdk": "^0.65.0",
    "@playwright/test": "^1.56.0",
    "@tauri-apps/cli": "^2.8.4",
    "convex-test": "^0.0.38",
    "playwright": "^1.56.0"
  },
  "description": "This is a [Next.js](https://nextjs.org) project bootstrapped with [`create-next-app`](https://nextjs.org/docs/app/api-reference/cli/create-next-app).",
  "main": "index.js",
  "keywords": [],
  "author": "",
  "license": "ISC"
}
